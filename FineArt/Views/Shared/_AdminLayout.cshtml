@using Microsoft.AspNetCore.Identity

@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

<!DOCTYPE html>

<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width,initial-scale=1" />
	<title>@ViewBag.Title - FineArt</title>
    <link href="~/lib/i_admin/vendor/select2/css/select2.min.css" rel="stylesheet" />
    <link href="~/lib/i_admin/vendor/jqvmap/css/jqvmap.min.css" rel="stylesheet" asp-append-version="true" />
    <link href="~/lib/i_admin/vendor/owl-carousel/css/owl.carousel.min.css" rel="stylesheet" asp-append-version="true" />
    <link href="~/lib/i_admin/vendor/owl-carousel/css/owl.theme.default.min.css" rel="stylesheet" asp-append-version="true" />
    <link href="~/lib/i_admin/vendor/toastr/css/toastr.min.css" rel="stylesheet" asp-append-version="true" />
	<link href="~/lib/i_admin/vendor/sweetalert2/dist/sweetalert2.min.css" rel="stylesheet" />

    <link href="~/lib/i_admin/vendor/bootstrap-material-datetimepicker/css/bootstrap-material-datetimepicker.css" rel="stylesheet" />
    <link href="~/lib/i_admin/vendor/pickadate/themes/default.css" rel="stylesheet" />
    <link href="~/lib/i_admin/vendor/pickadate/themes/default.date.css" rel="stylesheet" />

	<link href="~/lib/i_admin/css/style.css" rel="stylesheet" asp-append-version="true"/>
	<link href="~/css/site.css" rel="stylesheet" asp-append-version="true" />
</head>
<body>

    <div id="preloader">
        <div class="sk-three-bounce">
            <div class="sk-child sk-bounce1"></div>
            <div class="sk-child sk-bounce2"></div>
            <div class="sk-child sk-bounce3"></div>
        </div>
    </div>

	<div id="main-wrapper">

		@*Nav Header Start*@
		<div class="nav-header">
			<a href="index.html" class="brand-logo">
				<img class="logo-abbr" src="~/lib/i_admin/images/logo.png" alt="FA">
				<img class="logo-compact" src="~/images/logo-text.png" alt="FineArt">
                <img class="brand-title" src="~/images/logo-text.png" alt="FineArt">
			</a>

			<div class="nav-control">
				<div class="hamburger">
					<span class="line"></span><span class="line"></span><span class="line"></span>
				</div>
			</div>
		</div>
        @*Nav Header End*@

        @*Header Start*@
        <div class="header">
            <div class="header-content">
                <nav class="navbar navbar-expand">
                    <div class="collapse navbar-collapse justify-content-between">
                        <div class="header-left">
                            <div class="search_bar dropdown">
                                <span class="search_icon p-3 c-pointer" data-toggle="dropdown">
                                    <i class="mdi mdi-magnify"></i>
                                </span>
                                <div class="dropdown-menu p-0 m-0">
                                    <form>
                                        <input class="form-control" type="search" placeholder="Search" aria-label="Search">
                                    </form>
                                </div>
                            </div>
                        </div>

                        <ul class="navbar-nav header-right">
                            <li class="nav-item dropdown notification_dropdown">
                                <a class="nav-link" href="#" role="button" data-toggle="dropdown">
                                    <i class="mdi mdi-bell"></i>
                                    <div class="pulse-css"></div>
                                </a>
                                <div class="dropdown-menu dropdown-menu-right">
                                    <ul class="list-unstyled">
                                        <li class="media dropdown-item">
                                            <span class="success"><i class="ti-user"></i></span>
                                            <div class="media-body">
                                                <a href="#">
                                                    <p>
                                                        <strong>Martin</strong> has added a <strong>customer</strong> Successfully
                                                    </p>
                                                </a>
                                            </div>
                                            <span class="notify-time">3:20 am</span>
                                        </li>
                                        <li class="media dropdown-item">
                                            <span class="primary"><i class="ti-shopping-cart"></i></span>
                                            <div class="media-body">
                                                <a href="#">
                                                    <p><strong>Jennifer</strong> purchased Light Dashboard 2.0.</p>
                                                </a>
                                            </div>
                                            <span class="notify-time">3:20 am</span>
                                        </li>
                                        <li class="media dropdown-item">
                                            <span class="danger"><i class="ti-bookmark"></i></span>
                                            <div class="media-body">
                                                <a href="#">
                                                    <p>
                                                        <strong>Robin</strong> marked a <strong>ticket</strong> as unsolved.
                                                    </p>
                                                </a>
                                            </div>
                                            <span class="notify-time">3:20 am</span>
                                        </li>
                                        <li class="media dropdown-item">
                                            <span class="primary"><i class="ti-heart"></i></span>
                                            <div class="media-body">
                                                <a href="#">
                                                    <p><strong>David</strong> purchased Light Dashboard 1.0.</p>
                                                </a>
                                            </div>
                                            <span class="notify-time">3:20 am</span>
                                        </li>
                                        <li class="media dropdown-item">
                                            <span class="success"><i class="ti-image"></i></span>
                                            <div class="media-body">
                                                <a href="#">
                                                    <p>
                                                        <strong> James.</strong> has added a<strong>customer</strong> Successfully
                                                    </p>
                                                </a>
                                            </div>
                                            <span class="notify-time">3:20 am</span>
                                        </li>
                                    </ul>
                                    <a class="all-notification" href="#">
                                        See all notifications <i class="ti-arrow-right"></i>
                                    </a>
                                </div>
                            </li>
                            <li class="nav-item dropdown header-profile">
                                <a class="nav-link" href="#" role="button" data-toggle="dropdown">
                                    <i class="mdi mdi-account"></i>
                                </a>
                                <div class="dropdown-menu dropdown-menu-right">
                                    <a href="./app-profile.html" class="dropdown-item">
                                        <i class="icon-user"></i>
                                        <span class="ml-2">Profile </span>
                                    </a>
                                    <a href="./email-inbox.html" class="dropdown-item">
                                        <i class="icon-envelope-open"></i>
                                        <span class="ml-2">Inbox </span>
                                    </a>
                                    @if (SignInManager.IsSignedIn(User))
                                    { 
                                        <span class="dropdown-item">
                                            <form id="logoutForm" class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                                                <i class="icon-key"></i>
                                                <button id="logout" type="submit" class="btn text-dark">Logout</button>
                                            </form>
                                        </span>
                                    }
                                </div>
                            </li>
                        </ul>
                    </div>
                </nav>
            </div>
        </div>
        @*Header End*@

        @*Sidebar Start*@
        <div class="quixnav">
            <div class="quixnav-scroll">
                <ul class="metismenu" id="menu">
                    <li class="nav-label">Main Menu</li>
                    @if (User.IsInRole("Admin"))
                    {
                        <li>
                            <a class="has-arrow" href="javascript:void()" aria-expanded="false">
                                <i class="icon-list"></i><span class="nav-text">Submissions</span>
                            </a>
                            <ul aria-expanded="false">
                                <li><a asp-controller="Admin" asp-action="DesignsForAdmin">Designs</a></li>
                                <li><a asp-controller="Admin" asp-action="ManagerApproval">Submission</a></li>

                            </ul>   
                        </li>
                    <li>
                        <a class="has-arrow" href="javascript:void()" aria-expanded="false">
                            <i class="icon-note"></i><span class="nav-text">Approvals</span>
                        </a>
                        <ul aria-expanded="false">
                            <li><a asp-controller="Admin" asp-action="TeacherApproval">Staff Approval (Teachers)</a></li>
                            <li><a asp-controller="Admin" asp-action="ManagerApproval">Manager Approval</a></li>

                        </ul>
                    </li>

                    <li>
                        <a class="has-arrow" href="javascript:void()" aria-expanded="false">
                            <i class="icon-trophy"></i><span class="nav-text">Awards</span>
                        </a>
                        <ul aria-expanded="false">
                            <li><a asp-controller="Admin" asp-action="AddAward">Add Award</a></li>
                            <li><a asp-controller="Admin" asp-action="AwardsList">Awards</a></li>

                        </ul>
                    </li>
                    <li>
                        <a class="has-arrow" href="javascript:void()" aria-expanded="false">
                            <i class="icon-badge"></i><span class="nav-text">Competition</span>
                        </a>
                        <ul aria-expanded="false">
                            <li><a asp-controller="Admin" asp-action="AddCompetition">Add Competition</a></li>
                            <li><a asp-controller="Admin" asp-action="CompetitionsList">Competitions</a></li>

                        </ul>
                    </li>
                    }
                    @if (User.IsInRole("Manager"))
                    {
                        <li>
                            <a class="has-arrow" href="javascript:void()" aria-expanded="false">
                                <i class="icon-badge"></i><span class="nav-text">Competition</span>
                            </a>
                            <ul aria-expanded="false">
                                <li><a asp-controller="Admin" asp-action="CompetitionsList">Competitions</a></li>
                            </ul>
                        </li>
                    }
                    <li class="nav-label first">System Menu</li>
                    <li>
                        <a class="has-arrow" href="javascript:void()" aria-expanded="false">
                            <i class="icon-people"></i><span class="nav-text">User Role</span>
                        </a>
                        <ul aria-expanded="false">
                            <li><a asp-controller="Admin" asp-action="Roles">Roles</a></li>
                            <li><a asp-controller="Admin" asp-action="CreateRole">Add Role</a></li>
                        </ul>
                    </li>
                </ul>
            </div>
        </div>
        @*Sidebar End*@

        @*Content Body Start*@
        <div class="content-body">
            <div class="container-fluid">

                @RenderBody()

            </div>
        </div>
        @*Content Body End*@


        <div class="footer">
            <div class="copyright">
                <p>Copyright © FineArt &amp; All-Right Reserved 2023</p>
            </div>
        </div>
    </div>

    @*Required Vendors*@
	<script src="~/lib/i_admin/vendor/jquery/jquery.min.js"></script>
	<script src="~/lib/i_admin/vendor/global/global.min.js"></script>
	<script src="~/lib/i_admin/js/quixnav-init.js"></script>
	<script src="~/lib/i_admin/js/custom.min.js"></script>

    <script src="~/lib/i_admin/vendor/jquery-validation/jquery.validate.min.js"></script>
    <script src="~/lib/i_admin/js/plugins-init/jquery.validate-init.js"></script>

	<script src="~/lib/i_admin/vendor/sweetalert2/dist/sweetalert2.min.js"></script>

	<script src="~/lib/i_admin/vendor/raphael/raphael.min.js"></script>
	@*<script src="~/lib/i_admin/vendor/morris/morris.min.js"></script>*@

	<script src="~/lib/i_admin/vendor/circle-progress/circle-progress.min.js"></script>
	@*<script src="~/lib/i_admin/vendor/chart.js/chart.bundle.min.js"></script>*@

	@*<script src="~/lib/i_admin/vendor/gaugejs/dist/gauge.min.js"></script>*@


    <script src="~/lib/i_admin/vendor/moment/moment.min.js"></script>
    <script src="~/lib/i_admin/vendor/bootstrap-daterangepicker/daterangepicker.js"></script>
    <script src="~/lib/i_admin/vendor/clockpicker/js/bootstrap-clockpicker.min.js"></script>
    <script src="~/lib/i_admin/vendor/bootstrap-material-datetimepicker/js/bootstrap-material-datetimepicker.js"></script>
    <script src="~/lib/i_admin/vendor/pickadate/picker.js"></script>
    <script src="~/lib/i_admin/vendor/pickadate/picker.date.js"></script>
    <script src="~/lib/i_admin/vendor/pickadate/picker.time.js"></script>

    <script src="~/lib/i_admin/js/plugins-init/bs-daterange-picker-init.js"></script>
    <script src="~/lib/i_admin/js/plugins-init/clock-picker-init.js"></script>
    <script src="~/lib/i_admin/js/plugins-init/material-date-picker-init.js"></script>
    <script src="~/lib/i_admin/js/plugins-init/pickadate-init.js"></script>


    <script src="~/lib/i_admin/vendor/toastr/js/toastr.min.js"></script>

	<script src="~/lib/i_admin/vendor/flot/jquery.flot.js"></script>
	<script src="~/lib/i_admin/vendor/flot/jquery.flot.resize.js"></script>

	<script src="~/lib/i_admin/vendor/owl-carousel/js/owl.carousel.min.js"></script>

	@*<script src="~/lib/i_admin/vendor/jqvmap/js/jquery.vmap.min.js"></script>
	<script src="~/lib/i_admin/vendor/jqvmap/js/jquery.vmap.usa.js"></script>*@
	<script src="~/lib/i_admin/vendor/jquery.counterup/jquery.counterup.min.js"></script>

    <script src="~/lib/i_admin/vendor/select2/js/select2.full.min.js"></script>
    <script src="~/lib/i_admin/js/plugins-init/select2-init.js"></script>
	
	<script src="~/lib/i_admin/js/dashboard/dashboard-1.js" asp-append-version="true"></script>
    <script src="~/js/i_admin.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)

</body>
</html>
