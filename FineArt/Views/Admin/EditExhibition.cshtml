@model FineArt.Models.Exhibition
@{
    ViewData["Title"] = "Edit Exhibition";
    Layout = "_AdminLayout";
}

<div class="loading loading-hidden"></div>
<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-header">
                <h4 class="card-title">Edit Exhibition</h4>
            </div>
            <div class="card-body">
                <div class="basic-form">
                    <form id="EditExhibitionForm">
                        <input type="hidden" asp-for="ExhibitionId" />
                        <div class="form-group">
                            <label asp-for="ExhibitionTitle" class="col-form-label mr-2"></label><span class="text-danger">*</span>
                            <input asp-for="ExhibitionTitle" id="ExTitle" placeholder="Exhibition title here..." class="form-control" />
                        </div>
                        <div class="form-group">
                            <label asp-for="ExhibitionDate" class="col-form-label mr-2"></label><span class="text-danger">*</span>
                            <input asp-for="ExhibitionDate" id="ExhibitionDate" class="form-control" />
                        </div>
                        <div class="form-group">
                            <label asp-for="Country" class="col-form-label mr-2"></label><span class="text-danger">*</span>
                            <select class="single-select-placeholder js-states" asp-for="Country" id="ExCountry"></select>
                        </div>
                        <div class="form-group">
                            <label asp-for="Details" class="col-form-label mr-2"></label><span class="text-danger">*</span>
                            <textarea class="form-control" asp-for="Details" id="ExDetails"></textarea>
                        </div>
                        <div class="form-group">
                            <label asp-for="Conditions" class="col-form-label mr-2"></label><span class="text-danger">*</span>
                            <input asp-for="Conditions" class="form-control" id="ExConditions" />
                        </div>
                        <div class="form-group">
                            <input type="submit" value="Edit" class="btn btn-primary" />
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>