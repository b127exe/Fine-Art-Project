@model FineArt.Models.Award;
@{
    ViewData["Title"] = "Add Award";
    Layout = "_AdminLayout";
}
<div class="loading loading-hidden"></div>
<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-header">
                <h4 class="card-title">Add Award</h4>
            </div>
            <div class="card-body">
                    <div class="basic-form">
                        <form id="AddAwardForm" asp-controller="Admin" asp-action="AddAward">
                            <div class="form-group">
                                <label asp-for="AwardTitle" class="col-form-label mr-2"></label><span class="text-danger">*</span>
                                <input asp-for="AwardTitle" class="form-control" placeholder="Ex. Silver Shield Award" />
                            </div>
                            <div class="form-group">
                                <label asp-for="Type"></label>
                                <select class="single-select-placeholder js-states" asp-for="Type">
                                    <option value="extra mile" selected>Extra Mile</option>
                                    <option value="rising star">Rising Star</option>
                                    <option value="platinum">Platinum</option>
                                    <option value="hot">Hot</option>
                                    <option value="gold">Gold</option>
                                    <option value="silver">Silver</option>
                                    <option value="high five">High Five</option>
                                </select>
                            </div>
                            <div class="form-group">
                                <label asp-for="AwardAmount" class="col-form-label mr-2"></label><span class="text-danger">*</span>
                                <input asp-for="AwardAmount" class="form-control" placeholder="Ex. USD 2300"/>
                            </div>
                            <div class="form-group">
                                <label asp-for="Terms" class="col-form-label mr-2"></label><span class="text-danger">*</span>
                                <input asp-for="Terms" class="form-control" placeholder="Term and Conditions" />
                            </div>
                            <div class="form-group">
                                <input type="submit" value="Create" class="btn btn-primary" />
                            </div>
                        </form>
                </div>
            </div>
        </div>
    </div>
</div>
